  </div>
</div>

<!-- titulo e imagen -->
<div class="intro" style="background-image: url(/images/destination1.jpg);" data-aos="fade" data-stellar-background-ratio="0.5">
  <div class="container">
    <div class="row align-items-center">
      <div class="col-md-7">
        <span class="sub-text" style="color:black; width:25%; font-size:50px;">{{data.titulo}}</span>
        <h3 style="color:black; width: 15%; font-size: 40px">{{data.lugar}}</h3>
      </div>
    </div>
  </div>
</div>

<p class="text-center" style="color:black; font-size: 20px; padding-top:40px;">{{data.post}}</p>
<br>
<br>
<p class="text-right" style="color: black; font-size: 70px">{{data.author}}</p>

<br>
<br>
<br>
<br>

{{#if data.isFromCurrentUser}}
<p><a class="btn btn-info" href="/stories/edit/{{data.id_post}}#formulario" style="color:black; margin-left: 40px">
    Editar
  </a>
</p>
<br>

<form action="/stories/eliminar/{{data.id_post}}" method="post">
  <button class="btn btn-info" name="eliminar" value="eliminar" style="margin-left: 40px"> Eliminar </button>
</form>
{{/if}}

<br>
<a style="color:black; margin-left: 50%;"  href="/">Volver</a>


