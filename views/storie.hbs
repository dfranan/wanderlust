<!-- parte de arriba + navbar -->
<div class="site-navbar-wrap">
  <div class="site-navbar-top">
    <div class="container">
      <div class="row">
        <div class="col-md-10"></div>
        <div class="col-md-2">

          {{#if usuario}}
          <a href="/logout" class="linkUp">
            <span class="linkUp">Log out</span>
          </a>
          {{else}}
          <a href="login" class="linkUp">
            <span class="linkUp-Log">Login</span>
          </a>
          <a href="registro" class="linkUp-Log">
            <span class="linkUp-Log">Registrarse</span>
          </a>
          {{/if}}

        </div>
      </div>
    </div>
  </div>
  <div class="site-navbar">
    <div class="container py-1">
      <div class="row align-items-center">
        <div class="col-12">
          <nav class="site-navigation text-center" role="navigation">
            <div class="container">
              <ul class="site-menu js-clone-nav d-none d-lg-block">
                <li><a  style="color:black;" href="/">Home</a></li>
